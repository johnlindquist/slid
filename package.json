{
  "name": "mdplay",
  "version": "1.0.0",
  "description": "Terminal-based markdown presentation tool with MARP support",
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "mdplay": "./mdplay"
  },
  "files": [
    "mdplay",
    "src",
    "presenter.html"
  ],
  "keywords": [
    "slides",
    "presentation",
    "markdown",
    "terminal",
    "cli",
    "marp",
    "deck"
  ],
  "author": "John Lindquist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnlindquist/slid.git"
  },
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun run --watch src/index.tsx",
    "build": "bun build --compile --minify src/index.tsx --outfile mdplay",
    "build:darwin-arm64": "bun build --compile --minify --target=bun-darwin-arm64 src/index.tsx --outfile mdplay-darwin-arm64",
    "build:darwin-x64": "bun build --compile --minify --target=bun-darwin-x64 src/index.tsx --outfile mdplay-darwin-x64",
    "build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 src/index.tsx --outfile mdplay-linux-x64",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "react-devtools-core": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "react": "^19.2.1",
    "terminal-image": "^4.1.0"
  }
}
