{
  "name": "slides-cli",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "slides-cli": "./slides-cli"
  },
  "scripts": {
    "start": "bun run index.tsx",
    "build": "bun build --compile --minify index.tsx --outfile slides-cli",
    "build:darwin-arm64": "bun build --compile --minify --target=bun-darwin-arm64 index.tsx --outfile slides-cli-darwin-arm64",
    "build:darwin-x64": "bun build --compile --minify --target=bun-darwin-x64 index.tsx --outfile slides-cli-darwin-x64",
    "build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 index.tsx --outfile slides-cli-linux-x64",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "react-devtools-core": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "cli-highlight": "^2.1.11",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "react": "^19.2.1"
  }
}
